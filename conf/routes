# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /hello/                     controllers.Application.hello(name = "no name def")
GET     /hello/:name                controllers.Application.hello(name:String)
GET     /stream                     controllers.Application.stream
GET     /comet                      controllers.Application.comet
GET     /comet2                     controllers.Application.comet2
GET     /cometEx                    controllers.Application.cometEx
GET     /uploadForm                 controllers.Application.uploadForm
POST     /upload                     controllers.Application.upload

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
